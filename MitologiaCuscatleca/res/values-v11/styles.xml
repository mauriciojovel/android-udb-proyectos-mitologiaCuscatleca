<resources>

    <!--
        Base application theme for API 11+. This theme completely replaces
        AppBaseTheme from res/values/styles.xml on API 11+ devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">

        <!-- API 11 theme customizations can go here. -->
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionBarItemBackground">@drawable/action_bar_item_background_selector</item>
        <item name="android:scrollbarThumbHorizontal">@drawable/scroll_background_shape</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_background_shape</item>
    </style>

    <style name="ActionBar" parent="android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/action_bar_background_shape</item>
        <item name="android:titleTextStyle">@style/ActionBarTitleStyle</item>
    </style>

    <style name="ActionBarTitleStyle">
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>